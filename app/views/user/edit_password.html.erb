<div class="page-header">
  <h1>비밀번호 변경</h1>
</div>
<%=form_tag "/user/update_password", class:"form-horizontal" do %>
  <div class="control-group">
    <label class="control-label" for="current_password">현재 비밀번호</label>
    <div class="controls">
      <%=password_field_tag "current_password", nil, placeholder: "현재 비밀번호" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="new_password">새 비밀번호</label>
    <div class="controls">
      <%=password_field_tag "new_password", nil, placeholder: "새 비밀번호" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="new_password_confirm">새 비밀번호 확인</label>
    <div class="controls">
      <%=password_field_tag "new_password_confirm", nil, placeholder: "새 비밀번호 확인" %>
    </div>
  </div>
  <div class="form-actions">
    <%=submit_tag "비밀번호 변경", class: "btn btn-primary" %>
  </div>
<% end %>
