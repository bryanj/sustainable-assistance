<div class="page-header">
<h1>결과 확인</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>과제명</th>
      <th>제출 마감 시각</th>
      <th>결과</th>
    </tr>
  </thead>
  <tbody>
<% @results.each do |result| %>
    <tr>
      <td><%=result.assignment.title %></td>
      <td><%=result.period.end_time.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><a href="/submission/result/<%=result.id%>"><%=result.displayed_score%></a></td>
    </tr>
<% end %>
  </tbody>
</table>
<div class="pagination pagination-centered">
  <ul>
<% 1.upto(@total_page) do |page| %>
    <li<%=raw " class=\"active\"" if page == @current_page %>><a href="/result/list/<%=page %>"><%=page %></a></li>
<% end %>
  </ul>
</div>
